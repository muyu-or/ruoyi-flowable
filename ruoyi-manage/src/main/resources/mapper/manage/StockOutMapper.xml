<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.StockOutMapper">
    
    <resultMap type="com.ruoyi.manage.domain.StockOut" id="StockOutResult">
        <result property="id"    column="id"    />
        <result property="materialId"    column="material_id"    />
        <result property="materialName" column="material_name" />
        <result property="outboundType"    column="outbound_type"    />
        <result property="quantity"    column="quantity"    />
        <result property="warehouseArea"    column="warehouse_area"    />
        <result property="outboundTime"    column="outbound_time"    />
        <result property="operator"    column="operator"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectStockOutVo">
        select id, material_id,material_name, outbound_type, quantity, warehouse_area, outbound_time, operator, create_time from stock_out
    </sql>

    <select id="selectStockOutList" parameterType="com.ruoyi.manage.domain.StockOut" resultMap="StockOutResult">
        <include refid="selectStockOutVo"/>
        <where>  
            <if test="materialId != null  and materialId != ''"> and material_id = #{materialId}</if>
            <if test="materialName != null  and materialName != ''"> and material_name like concat('%', #{materialName}, '%')</if>
            <if test="outboundType != null  and outboundType != ''"> and outbound_type = #{outboundType}</if>
            <if test="warehouseArea != null  and warehouseArea != ''"> and warehouse_area = #{warehouseArea}</if>
            <if test="outboundTime != null "> and DATE(outbound_time) = #{outboundTime}</if>
            <if test="operator != null  and operator != ''"> and operator = #{operator}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectStockOutById" parameterType="java.lang.Long" resultMap="StockOutResult">
        <include refid="selectStockOutVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertStockOut" parameterType="com.ruoyi.manage.domain.StockOut" useGeneratedKeys="true" keyProperty="id">
        insert into stock_out
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="materialId != null and materialId != ''">material_id,</if>
            <if test="materialName != null and materialName != ''">material_name,</if>
            <if test="outboundType != null and outboundType != ''">outbound_type,</if>
            <if test="quantity != null">quantity,</if>
            <if test="warehouseArea != null and warehouseArea != ''">warehouse_area,</if>
            <if test="outboundTime != null">outbound_time,</if>
            <if test="operator != null and operator != ''">operator,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="materialId != null and materialId != ''">#{materialId},</if>
            <if test="materialName != null and materialName != ''">#{materialName},</if>
            <if test="outboundType != null and outboundType != ''">#{outboundType},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="warehouseArea != null and warehouseArea != ''">#{warehouseArea},</if>
            <if test="outboundTime != null">#{outboundTime},</if>
            <if test="operator != null and operator != ''">#{operator},</if>
        <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateStockOut" parameterType="com.ruoyi.manage.domain.StockOut">
        update stock_out
        <trim prefix="SET" suffixOverrides=",">
            <if test="materialId != null and materialId != ''">material_id = #{materialId},</if>
            <if test="materialName != null and materialName != ''">material_name = #{materialName},</if>
            <if test="outboundType != null and outboundType != ''">outbound_type = #{outboundType},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="warehouseArea != null and warehouseArea != ''">warehouse_area = #{warehouseArea},</if>
            <if test="outboundTime != null">outbound_time = #{outboundTime},</if>
            <if test="operator != null and operator != ''">operator = #{operator},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStockOutById" parameterType="java.lang.Long">
        delete from stock_out where id = #{id}
    </delete>

    <delete id="deleteStockOutByIds" parameterType="java.lang.String">
        delete from stock_out where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
