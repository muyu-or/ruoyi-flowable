<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TaskNodeExecutionMapper">

    <resultMap type="TaskNodeExecution" id="TaskNodeExecutionResult">
        <result property="id"    column="id"    />
        <result property="execRecordId"    column="exec_record_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="nodeKey"    column="node_key"    />
        <result property="nodeName"    column="node_name"    />
        <result property="assignedTeamId"    column="assigned_team_id"    />
        <result property="assignedUserId"    column="assigned_user_id"    />
        <result property="claimUserId"    column="claim_user_id"    />
        <result property="status"    column="status"    />
        <result property="startTime"    column="start_time"    />
        <result property="claimTime"    column="claim_time"    />
        <result property="completeTime"    column="complete_time"    />
        <result property="formData"    column="form_data"    />
        <result property="result"          column="result"           />
        <result property="approveComment"  column="approve_comment"  />
        <result property="processDuration" column="process_duration" />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTaskNodeExecutionVo">
        select id, exec_record_id, task_id, node_key, node_name, assigned_team_id, assigned_user_id, claim_user_id, status, start_time, claim_time, complete_time, form_data, result, approve_comment, process_duration, create_by, create_time, update_by, update_time, remark from task_node_execution
    </sql>

    <select id="selectTaskNodeExecutionList" parameterType="TaskNodeExecution" resultMap="TaskNodeExecutionResult">
        <include refid="selectTaskNodeExecutionVo"/>
        <where>
            <if test="execRecordId != null"> and exec_record_id = #{execRecordId}</if>
            <if test="taskId != null and taskId != ''"> and task_id = #{taskId}</if>
            <if test="nodeKey != null and nodeKey != ''"> and node_key = #{nodeKey}</if>
            <if test="assignedTeamId != null"> and assigned_team_id = #{assignedTeamId}</if>
            <if test="assignedUserId != null"> and assigned_user_id = #{assignedUserId}</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by create_time asc
    </select>

    <select id="selectTaskNodeExecutionById" parameterType="Long" resultMap="TaskNodeExecutionResult">
        <include refid="selectTaskNodeExecutionVo"/>
        where id = #{id}
    </select>

    <select id="selectByExecRecordId" parameterType="Long" resultMap="TaskNodeExecutionResult">
        <include refid="selectTaskNodeExecutionVo"/>
        where exec_record_id = #{execRecordId}
        order by create_time asc
    </select>

    <select id="selectByTaskId" parameterType="String" resultMap="TaskNodeExecutionResult">
        <include refid="selectTaskNodeExecutionVo"/>
        where task_id = #{taskId}
    </select>

    <insert id="insertTaskNodeExecution" parameterType="TaskNodeExecution" useGeneratedKeys="true" keyProperty="id">
        insert into task_node_execution
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="execRecordId != null">exec_record_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="nodeKey != null">node_key,</if>
            <if test="nodeName != null">node_name,</if>
            <if test="assignedTeamId != null">assigned_team_id,</if>
            <if test="assignedUserId != null">assigned_user_id,</if>
            <if test="claimUserId != null">claim_user_id,</if>
            <if test="status != null">status,</if>
            <if test="startTime != null">start_time,</if>
            <if test="claimTime != null">claim_time,</if>
            <if test="completeTime != null">complete_time,</if>
            <if test="formData != null">form_data,</if>
            <if test="result != null">result,</if>
            <if test="approveComment != null">approve_comment,</if>
            <if test="processDuration != null">process_duration,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="execRecordId != null">#{execRecordId},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="nodeKey != null">#{nodeKey},</if>
            <if test="nodeName != null">#{nodeName},</if>
            <if test="assignedTeamId != null">#{assignedTeamId},</if>
            <if test="assignedUserId != null">#{assignedUserId},</if>
            <if test="claimUserId != null">#{claimUserId},</if>
            <if test="status != null">#{status},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="claimTime != null">#{claimTime},</if>
            <if test="completeTime != null">#{completeTime},</if>
            <if test="formData != null">#{formData},</if>
            <if test="result != null">#{result},</if>
            <if test="approveComment != null">#{approveComment},</if>
            <if test="processDuration != null">#{processDuration},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTaskNodeExecution" parameterType="TaskNodeExecution">
        update task_node_execution
        <trim prefix="SET" suffixOverrides=",">
            <if test="execRecordId != null">exec_record_id = #{execRecordId},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="nodeKey != null">node_key = #{nodeKey},</if>
            <if test="nodeName != null">node_name = #{nodeName},</if>
            <if test="assignedTeamId != null">assigned_team_id = #{assignedTeamId},</if>
            <if test="assignedUserId != null">assigned_user_id = #{assignedUserId},</if>
            <if test="claimUserId != null">claim_user_id = #{claimUserId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="claimTime != null">claim_time = #{claimTime},</if>
            <if test="completeTime != null">complete_time = #{completeTime},</if>
            <if test="formData != null">form_data = #{formData},</if>
            <if test="result != null and result != ''">result = #{result},</if>
            <if test="approveComment != null and approveComment != ''">approve_comment = #{approveComment},</if>
            <if test="processDuration != null">process_duration = #{processDuration},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTaskNodeExecutionById" parameterType="Long">
        delete from task_node_execution where id = #{id}
    </delete>

    <delete id="deleteTaskNodeExecutionByIds" parameterType="String">
        delete from task_node_execution where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 个人任务按状态统计 -->
    <select id="countMyStatsByStatus" resultType="java.util.HashMap">
        SELECT status, COUNT(*) AS cnt
        FROM task_node_execution
        WHERE claim_user_id = #{userId}
           OR assigned_user_id = #{userId}
        GROUP BY status
    </select>

    <!-- 班组成员任务按状态统计（只统计确实分配给该班组的节点） -->
    <select id="countTeamStatsByStatus" resultType="java.util.HashMap">
        SELECT tne.status, COUNT(*) AS cnt
        FROM task_node_execution tne
        WHERE tne.assigned_team_id = #{teamId}
        GROUP BY tne.status
    </select>
</mapper>
